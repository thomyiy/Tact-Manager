<script>

    fetch("/school/getAll", {
        headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
        },
    })
        .then((response) => {
            return response.json();
        }).then((data) => {
        let selectTag = document.getElementById('school');
        data.map((d) => {
            let opt = document.createElement("option");
            opt.value = d._id;
            opt.innerHTML = d.name;
            selectTag.append(opt);
        });
    });

    document.addEventListener("DOMContentLoaded", function() {
        let selectTag = document.getElementById('program');
        
        const options = [
            { value: 'Masculin', label: 'Masculin' },
            { value: 'Féminin', label: 'Féminin' }
        ];
        
        options.forEach((option) => {
            let opt = document.createElement("option");
            opt.value = option.value;
            opt.innerHTML = option.label;
            selectTag.append(opt);
        });
    });

    var grid = new gridjs.Grid({
        columns: ["Ecole", "Sport", "Program"],
        pagination: {limit: 30},
        data: async () => {
            var data = await fetch("/team/getAll", {
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
            }).then((response) => {
                return response.json()
            });
            return data.map((e) => [e.school.name, e.sport.name, e.program.name]);
        },
        sort: true
    }).render(document.getElementById("table-pagination"));

</script>

