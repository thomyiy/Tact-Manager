<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <div class="row">
                        <div class="col-md-6">
                            <div>
                                <h5>Gestion de tournois</h5>
                            </div>
                        </div>
                    </div>
                    <!-- end row -->
                    <div class="container text-center">
                        <div class="row justify-content-center">
                            <div class="d-flex flex-column align-items-center col-md-6 mb-4 male-button-container">
                                <button type="button" class="btn btn-primary waves-effect waves-light mb-3" onclick="createTournament('Masculin')">Créer un tournoi (Homme) </button>
                                <button type="button" class="btn btn-primary waves-effect waves-light" onclick="deleteTournament('Masculin')">Supprimer tournoi actuel (Homme)</button>
                            </div>
                            <div class="d-flex flex-column align-items-center col-md-6 mb-4 female-button-container">
                                <button type="button" class="btn btn-primary waves-effect waves-light mb-3" onclick="createTournament('Feminin')">Créer un tournoi (Femme) </button>
                                <button type="button" class="btn btn-primary waves-effect waves-light" onclick="deleteTournament('Feminin')">Supprimer tournoi actuel (Femme)</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- contentFor('FooterJs') %>

<script>
        async function createTournament(sexeType) {
        try {
            await fetch(`/tournament/create/${sexeType}`, {
                method: 'POST',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
            });
            window.location.reload();
        } catch (error) {
            console.error('Erreur:', error);
        }
    }

    async function deleteTournament(sexeType) {
        try {
            await fetch(`/tournament/delete/${sexeType}`, {
                method: 'DELETE',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
            });

            window.location.reload();
        } catch (error) {
            console.error('Erreur:', error);
        }
    }
</script>