                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="arbitratorForm" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="arbitratorName" class="form-label">Nom de l'arbitre</label>
                            <input type="text" class="form-control" id="arbitratorName" name="arbitratorName" required>
                        </div>
                        <button type="button" class="btn btn-primary" id="saveArbitratorBtn">Enregistrer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
